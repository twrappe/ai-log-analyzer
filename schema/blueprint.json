{
  "instructions": "Analyze the provided logs and summarize each entry into a structured JSON object with fields: timestamp, message, severity, and category. Use the schema to ensure consistency. Classify each log entry by severity and category based on the examples below.",
  
  "default_category": "system",
  
  "severity_keywords": {
    "error": ["error", "failed", "exception", "critical"],
    "warning": ["warn", "deprecated", "timeout", "slow"],
    "info": ["info", "success", "completed", "started"]
  },
  
  "category_rules": {
    "network": ["dns", "socket", "connection", "ping"],
    "filesystem": ["disk", "volume", "file", "mount"],
    "update": ["install", "update", "patch", "package"],
    "system": ["boot", "kernel", "driver", "service", "component"]
  },

  "examples": [
    {
      "input": "2025-10-22 09:23:44 INFO Starting component servicing",
      "output": {
        "timestamp": "2025-10-22 09:23:44",
        "message": "Starting component servicing",
        "severity": "INFO",
        "category": "system"
      }
    },
    {
      "input": "2025-10-22 09:23:47 WARN Component version mismatch",
      "output": {
        "timestamp": "2025-10-22 09:23:47",
        "message": "Component version mismatch",
        "severity": "WARN",
        "category": "update"
      }
    },
    {
      "input": "Oct 21 14:42:12 kernel: disk read error on sda1",
      "output": {
        "timestamp": "Oct 21 14:42:12",
        "message": "disk read error on sda1",
        "severity": "ERROR",
        "category": "filesystem"
      }
    },
    {
      "input": "Oct 21 14:55:00 NetworkManager: connection established to wifi",
      "output": {
        "timestamp": "Oct 21 14:55:00",
        "message": "connection established to wifi",
        "severity": "INFO",
        "category": "network"
      }
    }
  ]
}
